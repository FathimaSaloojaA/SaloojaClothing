<a href="/orders" class="btn btn-outline-pink"  style="background: #ff69b4cb;
  color: white;
  padding: 10px 20px;
  border-radius: 12px;
  box-shadow: 0 6px 12px rgba(255, 105, 180, 0.5);
  transition: transform 0.2s ease, box-shadow 0.2s ease;" >ðŸ“¦ View My Orders</a>


  <% if (orders.length > 0) { %>
    <table class="orders-table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Status</th>
          <th>Date</th>
          <th>Total Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.orderID %></td>
            <td><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></td>
            <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
            <td>â‚¹ <%= order.totalPrice.toFixed(2) %></td>
            <td>
              <a href="/user/orders/<%= order.orderID %>" class="btn btn-sm btn-primary" style="padding: 5px 10px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  text-decoration: none;
  font-size: 0.9rem;
  background-color: #d6336c; /* pink */
  color: white;"  >View Details</a>
              <% if (order.status === 'pending') { %>
                <form action="/user/orders/<%= order.orderID %>/cancel" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger"  style="background-color: #b02a37; /* dark red */
  color: white;" >Cancel</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No orders placed yet.</p>
  <% } %>
</div>


<script>
/* --------- 1.  CONFIRM before submit --------- */
document.querySelectorAll('.delete-address-form').forEach(form =>{
  form.addEventListener('submit', e=>{
    e.preventDefault();                     // stop normal post
    Swal.fire({
      title: 'Are you sure?',
      text: 'Do you really want to delete this address?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, delete it!'
    }).then(result=>{
      if(result.isConfirmed){
        form.submit();                     // proceed
      }
    });
  });
});

/* --------- 2.  Toast after redirect --------- */
const params   = new URLSearchParams(window.location.search);
const type     = params.get('alert');   // 'success' | 'error' | null
const message  = params.get('msg');     // encoded text

if(type && message){
  Swal.fire({
    icon: type,
    title: type==='success' ? 'Success!' : 'Error!',
    text: decodeURIComponent(message),
    timer: 2000,
    showConfirmButton:false
  });
  // Clean the ?alert=â€¦ part from the bar without reloading
  window.history.replaceState({}, '', window.location.pathname);
}
</script>

