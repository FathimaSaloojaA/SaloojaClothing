<div class="checkout-container">
  <h2 class="title">ğŸ›’ Checkout</h2>

  <!-- ğŸ”¶ Address Section -->
  <div class="section address-section">
    <h3>Select Delivery Address</h3>
    
    <div class="address-list">
      <% addresses.forEach(addr => { %>
        <div class="address-card <%= addr._id.toString() === defaultAddressId ? 'selected' : '' %>">
          <input type="radio" name="selectedAddress" value="<%= addr._id %>" 
            <%= addr._id.toString() === defaultAddressId ? 'checked' : '' %> />
          <div class="details">
            <p><%= addr.street %>, <%= addr.city %></p>
            <p><%= addr.state %> - <%= addr.zip %></p>
            <p><%= addr.country %></p>
          </div>
          <button class="edit-btn" data-id="<%= addr._id %>">âœï¸ Edit</button>
        </div>
      <% }) %>
    </div>

    <!-- ğŸ”¶ Add Address Button -->
    <button class="add-address-toggle">â• Add New Address</button>

    <!-- ğŸ”¶ Add Address Form (Hidden initially) -->
