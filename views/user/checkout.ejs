            <% } else { %>
              <p class="price">â‚¹<%= item.originalPrice.toFixed(2) %></p>
            <% } %>
            <p>Qty: <%= item.quantity %></p>
            <p>Total: â‚¹<%= item.itemTotal.toFixed(2) %></p>
            <% if (item.couponNote) { %><small class="note">Coupon: <%= item.couponNote %></small><% } %>
