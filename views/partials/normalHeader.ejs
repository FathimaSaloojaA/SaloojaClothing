<!-- Topbar -->
<div class="container-fluid" style="padding:0; margin:0;">
    <div class="row bg-secondary py-2 px-xl-5" style="margin-bottom: 0; padding-bottom: 0;">
        <div class="col-lg-6 d-none d-lg-block">
            <div class="d-inline-flex align-items-center">
                <a class="text-dark" href="">FAQs</a>
                <span class="text-muted px-2">|</span>
                <a class="text-dark" href="">Help</a>
                <span class="text-muted px-2">|</span>
                <a class="text-dark" href="">Support</a>
            </div>
        </div>
        <div class="col-lg-6 text-center text-lg-right">
            <div class="d-inline-flex align-items-center">
                <a class="text-dark px-2" href="">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="text-dark px-2" href="">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="text-dark px-2" href="">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a class="text-dark px-2" href="">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="text-dark pl-2" href="">
                    <i class="fab fa-youtube"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <div class="row align-items-center py-3 px-xl-5" style="margin-bottom: 0; padding-bottom: 0;">
        <div class="col-lg-3 d-none d-lg-block">
            <a href="" class="text-decoration-none">
                <h1 class="m-0 display-5 font-weight-semi-bold" style="margin-bottom: 0;">
                    <span class="text-primary font-weight-bold border px-3 mr-1">Salooja</span>CLOTHING
                </h1>
            </a>
        </div>

        <!--searchbar-->
        <div class="col-lg-6 col-6 text-left">
  <form action="/product" method="GET" class="d-flex">
    <div class="input-group" style="margin-bottom: 0;">
      <input 
        type="text" 
        class="form-control" 
        placeholder="Search for products" 
        name="search"
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      >
      <div class="input-group-append">
        <button type="submit" class="input-group-text bg-transparent text-primary border-0">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </div>

    <% if (typeof search !== 'undefined' && search.trim() !== '') { %>
      <a href="/product" class="btn btn-sm btn-outline-secondary ml-2">Clear</a>
    <% } %>

<!--dropdown for sorting-->
<label for="sortSelect">Sort By (Hold Ctrl or Cmd to select multiple)</label>
  <select id="sortSelect" name="sort" multiple style="height: 100px; width: 200px;">
    <option value="priceAsc">Price: Low to High</option>
    <option value="priceDesc">Price: High to Low</option>
    <option value="nameAsc">Name: A - Z</option>
    <option value="nameDesc">Name: Z - A</option>
  </select>
  
  <button type="submit">Apply Sort</button>


  <!-- ✅ Add Price Checkboxes Here -->
  <div class="form-group mt-3">
    <label><input type="checkbox" name="price" value="0-999" <%= price?.includes('0-999') ? 'checked' : '' %>> Under ₹1000</label><br>
    <label><input type="checkbox" name="price" value="1000-1999" <%= price?.includes('1000-1999') ? 'checked' : '' %>> ₹1000 - ₹1999</label><br>
    <label><input type="checkbox" name="price" value="2000-4999" <%= price?.includes('2000-4999') ? 'checked' : '' %>> ₹2000 - ₹4999</label><br>
    <label><input type="checkbox" name="price" value="5000-99999" <%= price?.includes('5000-99999') ? 'checked' : '' %>> Above ₹5000</label>
  </div>

  <!-- Preserve category/subcategory if selected -->
  <% if (category) { %>
    <input type="hidden" name="category" value="<%= category %>">
  <% } %>
  <% if (subcategory) { %>
    <input type="hidden" name="subcategory" value="<%= subcategory %>">
  <% } %>

  <!-- Submit Button -->
  <button type="submit" class="btn btn-primary mt-2">Apply Filters</button>

  </form>
</div>

        <div class="col-lg-3 col-6 text-right">
            <a href="" class="btn border">
                <i class="fas fa-heart text-primary"></i>
                <span class="badge">0</span>
            </a>
            <a href="" class="btn border">
                <i class="fas fa-shopping-cart text-primary"></i>
                <span class="badge">0</span>
            </a>
        </div>
    </div>

    <div class="row border-top px-xl-5" style="margin-bottom: 0; padding-bottom: 0;">
        
     <div class="col-lg-3 d-none d-lg-block">
    <a href="/product" class="btn btn-secondary w-100 mb-2">All Products</a>

    <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100"
        data-toggle="collapse" href="#navbar-vertical"
        style="height: 65px; margin-top: -1px; padding: 0 30px;">
        <h6 class="m-0">Categories</h6>
        <i class="fa fa-angle-down text-dark"></i>
    </a>

    <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0"
        id="navbar-vertical" style="margin-bottom: 0; padding-bottom: 0;">
        <div class="navbar-nav w-100 overflow-auto" style="max-height: 410px; margin-bottom: 0; padding-bottom: 0;">
            <% categories.forEach(category => { %>
                <div class="nav-item dropdown">
                    <a href="/product?category=<%= category._id %>" class="nav-link" data-toggle="dropdown">
                        <%= category.name %> <i class="fa fa-angle-down float-right mt-1"></i>
                    </a>
                    <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                        <% category.subcategories.forEach(sub => { %>
                            <a href="/product?category=<%= category._id %>&subcategory=<%= sub._id %>" class="dropdown-item">
                                <%= sub.name %>
                            </a>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        </div>
    </nav>
</div>

        <div class="col-lg-9" style="margin-bottom: 0; padding-bottom: 0;">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0"
